<?php 
require ('mongo_API.php');
function listasin()
{
	$a=new asin();
	$db=$a->conn();
	$list=$a->getList($db);
	foreach($list as $a)
	{
		echo "<tr><td><input type='checkbox' name='chk[]' id='chk[]'value='$a[_id]'></td>";
		echo "<td><a href='operate.php?asin=$a[_id]'>$a[_id]</a></td></tr>";
	}
}

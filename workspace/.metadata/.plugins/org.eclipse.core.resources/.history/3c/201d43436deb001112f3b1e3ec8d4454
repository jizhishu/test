      		<tr height="30" align="center"><td><a> </a></td></tr>
    		<tr height="30" align="center"><td><a> </a></td></tr>
    		<tr align="center">
    			
    		</tr>
		</table>
   </td>
   <td>
   <table>
    	<?php 
    	if(isset($_GET['asin']))
    	{
    		$asin=$_GET['asin'];
    		listdetail($asin);
    	}
    	else
    		listasin();
    	?>
   </table>
   </td>

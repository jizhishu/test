<?php
require 'mongo_API.php';
var_dump($_POST);
if(isset($_POST['chk']))
{
	$chk[]=$_POST['chk'];
	$b=new asin();
	$db=$b->conn();
	foreach($chk as $a)
	{
		$n=count($a);
		while($n--)
		{
			$b->deleteByAsin($db,$a[$n]);
			echo "delete $a[$n]<br>";
		}
	}
}
if(isset($_POST['asin']))
{
	$asin=$_POST['asin'];
	$b=new asin();
	$db=$b->conn();
	$b->deleteByAsin($db,$asin);
	echo "delete $asin<br>";
}

?>